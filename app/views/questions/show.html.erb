<h2 id="question-block"><%= @question.title %></h2>
<p id="question"><%= @question.text %></p>
<%= render "/answers/show", {question: @question} %>
<%= render "/answers/form", {question: @question, answer: Answer.new} %>
<% if can? :destroy, @question %>
<%= link_to "delete", @question , method: :delete, :confirm => "Are you sure?" %> |
<% end %>
